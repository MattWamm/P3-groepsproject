@page
@model EigenMaaltijd.Pages.PlaatsGerechtModel
@{
    ViewData["Title"] = "Gerecht Plaatsen";
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/EigenMaaltijd.css">
    <script src="lib/jquery/dist/jquery.js"></script>
    <title></title>

    <style>

        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        .flex {
            display: flex
        }

            .flex.vertical {
                flex-direction: column
            }

        .justify--between {
            justify-content: space-between;
        }

        .align--center {
            align-items: center;
        }

        .grid {
            display: grid;
            width: 100%;
        }

            .grid.col-g-2 {
                grid-template-columns: repeat(2, minmax(0px, 1fr))
            }

            .grid.gap-s {
                grid-gap: 10px;
            }

            .grid.gap-l {
                grid-gap: 30px;
            }

        .upload {
            border: 2px dotted #c3c3c3;
            padding-bottom: 100%;
        }

            .upload:hover {
                border-style: solid;
                cursor: pointer;
            }

        #container_plaatsgerecht_3 {
            background-color: white;
            color: black;
            border: solid black 2px;
            width: 80%;
            height: 80%;
            text-align: left;
            padding: 30px;
        }

        #p_plaatsgerecht_1 {
            color: black;
            text-align: left;
            margin-left: 30px;
            margin-top: 20px;
            font-size: 30px;
        }
    </style>
</head>

<body>

    <div class="container-fluid" id="container_plaatsgerecht_1">
        <nav class="navbar navbar-expand" id="nav">
            <a class="navbar-brand" asp-page="/Index"><img src="~/img/Testlogo.png" height="35" width="140" alt="Testlogo EigenMaaltijd" id="Testlogo" /></a>

            <form class="form" id="form_zoekbalk">
                <input class="form-control" type="search" placeholder="Zoeken naar gerecht..." id="input_zoekbalk">
            </form>

            <a class="navbar" asp-page="/MijnProfiel"><img src="~/img/Profiellogo.png" height="35" width="35" alt="Logo Mijn Profiel" id="Profiellogo" /></a>
        </nav>
    </div>


    <div class="container-fluid" id="container_plaatsgerecht_2">
        <h1><br></h1>
    </div>
    <form method="post">
        <div class="container-fluid" id="container_plaatsgerecht_3">
            <div class="segment flex vertical">
                <h2>Gerecht plaatsen</h2>
                <div class="grid col-g-2 wrap gap-s">
                    <div class="grid gap-l">
                        <div class="grid col-g-2 gap-s">

                            <div class="input flex vertical">
                                <label>Naam gerecht:</label>
                                <input asp-for="meal.Name" type="text" placeholder="Naam invoeren..." />
                            </div>
                            <div class="count flex vertical">
                                <label>Aantal porties:</label>

                                <div class="flex align--center">
                                    <span class="icon minus">
                                        <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                                    </span>
                                    <span class="count">
                                        <input asp-for="meal.Portions" type="number" id="portion-count" value="1" />
                                    </span>
                                    <span class="icon plus">
                                        <svg viewBox="0 0 24 24" width="20" height="20" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" class="css-i6dzq1"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>
                                    </span>
                                </div>
                            </div>
                        </div>


                        <div class="flex vertical">
                            <div class="count flex vertical">
                                <label>Portiegrootte (in grammen):</label>
                                <div class="flex align--center">
                                    <span class="count">
                                        <input asp-for="meal.PortionSize" type="number" id="portion-size" value="100" />
                                    </span>
                                </div>
                            </div>
                        </div>

                        

                        <div class="flex vertical">
                            <span>Foto's</span>
                            <div class="grid col-g-2 gap-s">
                                <div class="featured-image upload"></div>
                                <div class="grid col-g-2 gap-s">
                                    <div class="upload"></div>
                                    <div class="upload"></div>
                                    <div class="upload"></div>
                                    <div class="upload"></div>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="flex vertical justify--between">
                        <div class="flex vertical">


                            <span>Ingrediënten toevoegen:</span>
                            <table>
                                <tr>
                                    <th><input asp-for="meal.Ingredients" type="text" placeholder="Ingrediënt..." /></th>

                                    <th><input type="text" placeholder="Prijs..." /></th>
                                    <th><button>Toevoegen</button></th>
                                </tr>
                            </table>
                            <label for="ingevroren">Ingevroren:</label>
                            <select asp-for="meal.Ingevroren" id="ingevroren" name="ingevroren">
                                <option value="Ja">Ja</option>
                                <option value="Nee">Nee</option>
                            </select>
                        </div>

                        <div class="grid col-g-2 gap-s">
                            <span>Totaal: €0,00</span>
                            <button asp-page-handler="Plaats">Plaats het gerecht</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</body>